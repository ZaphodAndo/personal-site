{%- css %}.postlist { counter-reset: start-from
{{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}
<div reversed class="postlist">
	{% for post in postslist | reverse %}
	<a
		href="{{ post.url }}"
		class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}"
		title="{{ post.data.title }}"
	>
		<p class="post-title">
			{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{
				post.url
			}}</code
			>{% endif %}
		</p>
		<time
			class="post-date"
			datetime="{{ post.date | htmlDateString }}"
			>{{ post.date | readableDate("dd LLLL yyyy") }}</time
		>
	</a>
	{% endfor %}
</div>
